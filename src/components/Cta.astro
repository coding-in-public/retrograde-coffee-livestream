---
import { Image } from "@astrojs/image/components";
import Button from "./Button.astro";
import Heading from "./Heading.astro";
---

<div
  class="relative h-screen -mx-4 grid gap-6 align-items-center justify-center content-center p-6 md:p-20"
>
  <Image
    src="/images/roasts.jpg"
    width="2000"
    height="1000"
    alt="coffee bags pour"
    format="avif"
    quality={80}
    class="absolute inset-0 object-cover object-center h-screen -z-10"
  />
  <div class="absolute inset-0 h-screen bg-black/30 -z-10"></div>
  <Heading headerTag="h2" headerStyles="h1" classes="text-white max-w-2xl">
    Check out our latest roasts, seasonal batches, and house-made go-to
    favorites.
  </Heading>
  <Button headerTag="a" text="Buy Coffee" type="light" href="#" />
</div>
