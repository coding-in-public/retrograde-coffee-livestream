---
import Layout from "../layouts/Layout.astro";
import Welcome from "../components/Welcome.astro";

import { Image, Picture } from "@astrojs/image/components";
import Cta from "../components/Cta.astro";
import Gallery from "../components/Gallery.astro";
import Section from "../components/Section.astro";
import Heading from "../components/Heading.astro";
import Button from "../components/Button.astro";
import Instagram from "../components/Instagram.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Retrograde Coffee">
  <div class="relative h-screen">
    <Image
      src="/images/hero.jpg"
      width="2000"
      height="1000"
      alt="coffee pour"
      format="avif"
      quality={80}
      class="absolute inset-0 object-cover h-screen -z-10"
    />
  </div>
  <main
    class="p-4 grid gap-12 md:gap-20 text-rg-gray leading-6 text-lg md:text-xl"
  >
    <Welcome />
    <Cta />
    <Gallery />
    <Section
      sectionTitle="newsletter signup"
      classes="grid place-items-center gap-6 md:gap-12"
    >
      <Heading headerTag="h2" headerStyles="h2" classes="text-center sr-only"
        >Sign up for our newsletter</Heading
      >
      <p>Get updated first on new brew releases, menu items, and shop news</p>
      <Button headerTag="button" text="Sign Up" type="dark" />
    </Section>
    <Instagram />
    <div class="flex flex-wrap justify-center gap-6">
      <Image
        src="/images/feature-1.jpg"
        width="800"
        height="1200"
        alt="coffee pour"
        format="avif"
        quality={80}
        class="flex-1"
      />
      <Image
        src="/images/feature-2.jpg"
        width="800"
        height="1200"
        alt="coffee 1200our"
        format="avif"
        quality={80}
        class="flex-1"
      />
    </div>
    <Contact />
  </main>
  <Footer />
</Layout>
